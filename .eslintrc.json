{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    },
    {
      "files": ["tests/**/*"],
      "env": {
        "jest": true
      }
    }
  ],
  "root": true
}
